doctype html
html(lang="en")
    head
        include bootstrape
        link(rel="stylesheet",href="stylesheets/profile.css")
        block loadStyle
        script(src="https://sdk.amazonaws.com/js/aws-sdk-2.1443.0.min.js") 
        script(src="javascripts/profile.js") 
        script(src="javascripts/common.js") 
        block loadScript
        title profile
    body(style="background : #f2f2f2")
        div.sidenav.sidenav-open
            div.d-flex.flex-column.align-items-center 
                button.logo-box.mb-3.mt-3
                    i.fa.fa-building(style="font-size : 35px")
                h5.company-name.text-white.p-0.m-0
                p.company-email.text-white
                p.company-mobile.text-white
        div.section.section-open
            nav.navbar.navbar-expand-sm.px-3.py-3.bg-white.shadow-sm
                button.btn.toggler 
                    i.fa.fa-align-left
                ul#toolbar.navbar-nav.w-100.justify-content-end 
                   
            include toast                         
            div.mx-4.py-3 
                block content