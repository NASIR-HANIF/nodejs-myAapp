div.modal.animate__animated.animate__zoomIn#login-modal
    div.modal-dialog.modal-lg.modal-dialog-centered
        div.modal-content
            div.modal-body.p-5
                div.row
                    div.col-md-6.d-flex.justify-content-center.align-items-center
                        img(src="images/signup.jpg", width="100%" alt="")
                    div.col-md-6
                        h1.display-4(style="font-size:35px") Welcome
                        form#login-form
                            div.form-group.mb-4
                                input.form-control.p-3.username(
                                    type="email"
                                    placeholder="Company Email"
                                    name="email"
                                    )
                                span.username-error.text-danger   
                            div.form-group.mb-4
                                input.form-control.p-3.password(
                                    type="password"
                                    placeholder="Company password"
                                    name="password"
                                    )
                                span.password-error.text-danger
                            div.mb-4.d-flex.justify-content-between
                                div.form-check
                                    input#admin.loginAs.form-check-input(
                                        type="radio"
                                        name="loginAs"
                                        value="admin"
                                    )
                                    | Admin
                                    label.form-check-label(for="employee") 
                                div.form-check
                                    input#employee.loginAs.form-check-input(
                                        type="radio"
                                        name="loginAs"
                                        value="employee"
                                    )
                                    | Employee
                                    label.form-check-label(for="student") 
                                div.form-check
                                    input#student.loginAs.form-check-input(
                                        type="radio"
                                        name="loginAs"
                                        value="student"
                                    )
                                    | Student
                                    label.form-check-label(for="student") 
                            div.form-group.mb-4
                                button.btn.btn-primary.login-btn(
                                    type="submit"
                                    disabled
                                    ) Login 
                                button.btn.btn-danger.disabled.d-none.before-send
                                    span.spinner-grow.spinner-grow-sm
                                    span Proccessing... 
                            p New user ? 
                                a(href="#" id="signup-modal-request") signup   
