div.modal.animate__animated.animate__zoomIn#signup-modal
    div.modal-dialog.modal-lg.modal-dialog-centered
        div.modal-content
            div.modal-body.p-5
                div.row
                    div.col-md-6.d-flex.justify-content-center.align-items-center
                        img(src="images/signup.jpg", width="100%" alt="")
                    div.col-md-6
                        h1.display-4(style="font-size:35px") Register Now
                        form#signup-form
                            div.form-group.mb-4
                                input.form-control.p-3.company-name(
                                type="text"
                                required
                                placeholder="Company Name"
                                name="company"
                                )
                            span.company-name-error.text-danger
                            div.form-group.mb-4
                                input.form-control.p-3.company-email(
                                type="email"
                                required
                                placeholder="Company Email"
                                name="email"
                                )
                            span.company-email-error.text-danger  
                            div.form-group.mb-4
                                input.form-control.p-3(
                                type="number"
                                required
                                placeholder="Company Mobile"
                                name="mobile"
                                )
                            div.form-group.mb-4
                                input.form-control.p-3(
                                type="password"
                                required
                                placeholder="Company password"
                                name="password"
                                )
                            div.form-group.mb-4
                                button.btn.btn-primary.signup-btn(type="submit") Signup
                                button.btn.btn-danger.disabled.d-none.before-send
                                    span.spinner-grow.spinner-grow-sm
                                    span Proccessing...  
                            p Already Have a Account ? 
                                a(href="#" id="login-modal-request") Login   
